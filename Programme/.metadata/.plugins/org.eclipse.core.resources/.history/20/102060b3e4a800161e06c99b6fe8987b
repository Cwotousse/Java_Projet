	// PROPRIETE
	public Date getDateDebutReserv	()	 					{ return dateDebutReserv; 					}
	public Date getDateFinReserv	() 						{ return dateFinReserv; 					}
	public void setDateDebutReserv	(Date dateDebutReserv) 	{ this.dateDebutReserv = dateDebutReserv; 	}
	public void setDateFinReserv	(Date dateFinReserv) 	{ this.dateFinReserv = dateFinReserv; 		}
