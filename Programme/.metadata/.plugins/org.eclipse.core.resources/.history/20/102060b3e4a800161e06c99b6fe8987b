package be.mousty.accessToDao;

import java.sql.Date;
import java.util.ArrayList;

import be.mousty.dao.AbstractDAOFactory;
import be.mousty.dao.DAO;
import be.mousty.pojo.CoursSemaine;

public class CoursSemaineATD {
	// VARIABLES
	private Date dateDebutReserv;
	private Date dateFinReserv;


	// CONSTRUCTEUR SANS ARGUMENTS
	public CoursSemaineATD(){}
	public CoursSemaineATD(Date dateDebutReserv, Date dateFinReserv){
		this.dateDebutReserv 	= dateDebutReserv;
		this.dateFinReserv 		= dateFinReserv;
	}
	
	// METHODES
	AbstractDAOFactory adf = AbstractDAOFactory.getFactory(AbstractDAOFactory.DAO_FACTORY);
	DAO<CoursSemaine> CoursSemaineDAO = adf.getCoursSemaineDAO();
	public int			create	(CoursSemaine s) 	{ return CoursSemaineDAO.create(s); 	}
	public boolean 		delete	(CoursSemaine s)	{ return CoursSemaineDAO.delete(s); 	}
	public CoursSemaine getId	(CoursSemaine s) 	{ return CoursSemaineDAO.getId(s); 		}
	public boolean 		update	(CoursSemaine s) 	{ return CoursSemaineDAO.update(s); 	}
	public CoursSemaine find	(int id) 			{ return CoursSemaineDAO.find(id); 		} 
	public ArrayList<CoursSemaine> getList () 		{ return CoursSemaineDAO.getList(); 	} 
	public void AjouterSemainesDansDB	(String start, String end)	{ CoursSemaineDAO.AjouterSemainesDansDB(start, end);	}
	public ArrayList<CoursSemaine> getListSelonCriteres(CoursSemaine obj) 	{ return CoursSemaineDAO.getListSelonCriteres(obj);	}

