						//empty = false;
						//if (eFull.getNumPersonne() != R.getEleve().getNumPersonne()){
						//System.out.println(eFull.getNumPersonne() + " != " + R.getEleve().getNumPersonne());
						listeFiltree.add(eFull);
		//}
		//else {
		//System.out.println(eFull.getNumPersonne() + " == " + R.getEleve().getNumPersonne());
		//listeEleveADegager.add(eFull);
		//}
		//}
		//else { listeFiltree.add(eFull); }

		/*if(listReservation.size() != 0){
			for(Eleve ElFiltre : listeFiltree)
