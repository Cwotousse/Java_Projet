package be.mousty.dao;

import be.mousty.accessToDao.AccreditationATD;
import be.mousty.accessToDao.ClientATD;
import be.mousty.accessToDao.CoursATD;
import be.mousty.accessToDao.CoursCollectifATD;
import be.mousty.accessToDao.CoursParticulierATD;
import be.mousty.accessToDao.DisponibiliteMoniteurATD;
import be.mousty.accessToDao.EleveATD;
import be.mousty.accessToDao.MoniteurATD;
import be.mousty.accessToDao.PersonneATD;
import be.mousty.accessToDao.ReservationATD;
import be.mousty.accessToDao.SemaineATD;
import be.mousty.accessToDao.UtilisateurATD;

public abstract class AbstractDAOFactory {
	public static final int DAO_FACTORY 	= 0;
	public static final int XML_DAO_FACTORY = 1;

	public abstract DAO<UtilisateurATD> 			getUtilisateurDAO();
	public abstract DAO<PersonneATD> 				getPersonneDAO();
	public abstract DAO<ClientATD> 					getClientDAO();
	public abstract DAO<MoniteurATD> 				getMoniteurDAO();
	public abstract DAO<EleveATD> 					getEleveDAO();
	public abstract DAO<AccreditationATD> 			getAccreditationDAO();
	public abstract DAO<SemaineATD> 				getSemaineDAO();
	public abstract DAO<CoursATD> 					getCoursDAO();
	public abstract DAO<CoursParticulierATD> 		getCoursParticulierDAO();
	public abstract DAO<CoursCollectifATD> 			getCoursCollectifDAO();
	public abstract DAO<ReservationATD> 			getReservationDAO();
	public abstract DAO<DisponibiliteMoniteurATD> 	getDisponibiliteMoniteurDAO();

	public static AbstractDAOFactory getFactory(int type){
		switch(type){
			case DAO_FACTORY: return new DAOFactory();
			default: return null;
		}
	}
	
}
