package FENETRE;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTable;
import javax.swing.border.EmptyBorder;
import javax.swing.table.DefaultTableModel;

import DAO.ReservationDAO;
import POJO.Reservation;

import javax.swing.JButton;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import java.util.ArrayList;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class F_AfficherFacture extends JFrame {

	private JPanel contentPane;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					F_AfficherFacture frame = new F_AfficherFacture(-1);
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public F_AfficherFacture(int idClient) {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 671, 509);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);

		// NEW
		JButton btn_retour = new JButton("Retour");
		btn_retour.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
			}
		});

		// BOUNDS
		btn_retour.setBounds(289, 415, 89, 23);

		// ADD
		contentPane.add(btn_retour);


		// Retour
		btn_retour.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseClicked(MouseEvent e) {
				setVisible(false);
				F_AfficherFacture frame = new F_AfficherFacture(idClient);
				frame.setDefaultCloseOperation(JFrame.HIDE_ON_CLOSE);
				frame.setVisible(true);
			}
		});

		// Liste RDV
		ArrayList<Reservation> listReserv = ReservationDAO.getMyList(idClient);

		// TABLEAU -> https://tips4java.wordpress.com/2010/01/24/table-row-rendering/
		//headers for the table
		String[] columns = new String[] { "N°","Période", "Horaire", "Libellé", "Niveau", "Moniteur", "Eleve", "Titutlaire", "Prix" };

		//actual data for the table in a 2d array
		Object[][] data  = new Object[listReserv.size()][9];

		for (int i = 0; i < listReserv.size(); i++) {
			data[i][0] = listReserv.get(i).getNumReservation();
			data[i][1] = listReserv.get(i).getSemaine().getDateDebut() + " à " + listReserv.get(i).getSemaine().getDateFin();
			data[i][2] = listReserv.get(i).getHeureDebut() + " à " + listReserv.get(i).getHeureFin() + "h";
			data[i][3] = listReserv.get(i).getCours().getNomSport();
			data[i][4] = "niveau";
			data[i][5] = listReserv.get(i).getMoniteur().getNom().toUpperCase() + " " + listReserv.get(i).getMoniteur().getPre();
			data[i][6] = listReserv.get(i).getEleve().getNom().toUpperCase() + " " + listReserv.get(i).getEleve().getPre();
			data[i][7] = listReserv.get(i).getClient().getNom().toUpperCase() + " " + listReserv.get(i).getClient().getPre();
			data[i][8] = listReserv.get(i).getCours().getPrix() + "€";
		}

		JScrollPane scrollPane = new JScrollPane(new JTable(new DefaultTableModel(data, columns)));
		scrollPane.setBounds(10, 11, 751, 255);
		contentPane.add(scrollPane);
	}
}
